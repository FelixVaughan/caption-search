{
  "manifest_version": 3,
  "name": "Caption Search",
  "version": "1.0",
  "description": "Jump to timestamps by caption text",
  "permissions": ["activeTab", "tabs"],
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/watch?v=*",
        "https://www.youtube.com/embed/*", 
        "https://www.youtube.com/*"
      ],
      "js": ["./js/content.js"]
    }
  ],

  "background": {
    "service_worker": "./js/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["js/*.js"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["images/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
